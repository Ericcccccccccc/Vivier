{
  "name": "@vivier/email-providers",
  "version": "1.0.0",
  "description": "Multi-provider email integration layer supporting Gmail, Outlook, and IMAP/SMTP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "email",
    "gmail",
    "outlook",
    "imap",
    "smtp",
    "oauth2",
    "email-client",
    "email-provider"
  ],
  "author": "Vivier Team",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "google-auth-library": "^9.6.3",
    "googleapis": "^131.0.0",
    "mailparser": "^3.6.5",
    "node-imap": "^0.9.6",
    "nodemailer": "^6.9.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.11.5",
    "@types/node-imap": "^0.9.2",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vivier/email-providers.git"
  },
  "bugs": {
    "url": "https://github.com/vivier/email-providers/issues"
  },
  "homepage": "https://github.com/vivier/email-providers#readme"
