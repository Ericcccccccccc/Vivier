# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Optional: Override default model
GROQ_MODEL=openai/gpt-oss-120b

# Optional: Rate Limits (per minute)
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_TOKENS=6000

# Optional: Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_ENABLED=true

# Optional: Logging Level
LOG_LEVEL=info

# Optional: Usage Tracking
TRACK_USAGE=true
USAGE_EXPORT_PATH=./usage-stats

# Optional: Free Tier Limits
FREE_TIER_DAILY_REQUESTS=100
FREE_TIER_DAILY_TOKENS=10000
FREE_TIER_MONTHLY_REQUESTS=3000
FREE_TIER_MONTHLY_TOKENS=300000